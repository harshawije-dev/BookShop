<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-light bg-light">
        <div class="container-fluid">
            @Html.ActionLink("Book Shop", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <div class="display-nav">
                <ul class="navbar-nav flex-display">
                    <li class="nav-item">
                        @Html.ActionLink("Add", "Index", "Main", new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Contact", "Contact", "Home", new { @class = "nav-link" })
                    </li>
                </ul>
            </div>
        </div>
    </nav>
